<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="margin-bottom:20px;">
        <div class="container">
            <div class="navbar-header" style="margin-right:50px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("G18 MobileStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" style="margin-top:10px; margin-bottom:5px;">
                <div class="input-group navbar-left" style="width:300px;">
                    <input type="text" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
                <div class="nav navbar-nav navbar-right" style="color:white; vertical-align:bottom; text-align:right;">
                    @if (Request.IsAuthenticated) {
                        <strong>@Html.Encode(User.Identity.Name)</strong>
                        @Html.ActionLink("Logout", "Logout", "Auth")
                    }
                    else {
                            <span class="glyphicon glyphicon-user"></span>
                            @Html.ActionLink("Register", "Register", "Auth")
                            <span> | </span>
                            <span class="glyphicon glyphicon-log-in"></span>
                            @Html.ActionLink("Log In", "Login", "Auth")
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="navbar navbar-left col-sm-3">
             @{  Html.RenderAction("OEMList", "Home", null);
                 Html.RenderAction("PopularPhones", "Home", null); }
        </div>
        <div class="navbar navbar-default col-sm-9">
            @RenderBody()
        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>